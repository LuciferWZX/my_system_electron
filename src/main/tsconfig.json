{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@": ["./"],
      "@/common": ["../common"],
      "@/common/*": ["../common/*"]
    }
  },
  "include": [
    "global.d.ts"
  ]
}
